<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
   
<configuration>
	<!-- db접속정보 값을 가지고 있는 파일 설정 -->
		<properties resource="com/may/mybatis/db.properties"/>	<!-- 경로의 패키지명까지 풀네밍으로 적을것 -->
		
		
		
		<!-- 별명 부여 -->
		<!-- <typeAliases>
			<typeAlias type="" alias=""/>
		</typeAliases> -->
		
		<!--  db접속정보 세팅-->
		<environments default="development">
			<environment id="development">
				<transactionManager type="JDBC"/>
					<dataSource type="POOLED">
						<property name="driver" value="${driver}"/>
						<property name="url" value="${url}"/>
						<property name="username" value="${username}"/>
						<property name="password" value="${pass}"/>
						<!--db.properties username과 pass 값이 같아야함   -->
						<property name="poolMaximumActiveConnections" value="20"/>
						<!-- 활성화된 최대 커넥션의 갯수-->
						<property name="poolMaximumIdleConnections" value="20"/>
						<!-- 유효상태에서 최대 커넥션의 갯수 -->
						<property name="poolMaximumCheckoutTime" value="20000"/>
						<!-- 최대 커넥션 획득시간 -->
						<property name="poolTimeToWait" value="15000"/>
						<!-- pool이 비정상적으로 긴경우 커넥션을 다시 얻을려는 셋팅 -->
					</dataSource>
			</environment>
		</environments>
		
		<!-- Mapper.xml 파일 설정 -->
			<mappers>
				<mapper resource="com/may/mybatis/MayMapper.xml"/>
			</mappers>
</configuration>